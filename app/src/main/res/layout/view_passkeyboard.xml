<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button1"
        android:background="@drawable/keyboard_num"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/white"
        app:layout_heightPercent="26.7%"
        app:layout_marginTopPercent="0.5%"
        app:layout_textSizePercent="15%"
        app:layout_widthPercent="33%" />


    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/keyboard_num"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        app:layout_heightPercent="26.7%"
        app:layout_textSizePercent="15%"
        app:layout_widthPercent="33%" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/button5"
        android:background="@drawable/keyboard_num"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/white"
        app:layout_heightPercent="26.7%"
        app:layout_marginLeftPercent="0.5%"
        app:layout_marginTopPercent="0.5%"
        app:layout_textSizePercent="15%"
        app:layout_widthPercent="33%" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_toEndOf="@+id/button4"
        android:background="@drawable/keyboard_num"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/white"
        app:layout_heightPercent="26.7%"
        app:layout_marginLeftPercent="0.5%"
        app:layout_marginTopPercent="0.5%"
        app:layout_textSizePercent="15%"
        app:layout_widthPercent="33%" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button9"
        android:background="@drawable/selector_dark"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/jishuaqi_gb"
        android:textColor="@color/white"
        app:layout_heightPercent="18.7%"
        app:layout_marginTopPercent="0.5%"
        app:layout_textSizePercent="15%"
        app:layout_widthPercent="33%" />

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector_dark"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        app:layout_heightPercent="18.7%"
        app:layout_marginTopPercent="0.5%"
        app:layout_textSizePercent="15%"
        app:layout_widthPercent="66.5%" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_toStartOf="@+id/button5"
        android:background="@drawable/keyboard_num"
        android:gravity="center"
        android:text="7"
        android:textColor="@color/white"
        app:layout_heightPercent="26.7%"
        app:layout_marginTopPercent="0.5%"
        app:layout_textSizePercent="15%"
        app:layout_widthPercent="33%" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:background="@drawable/keyboard_num"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/white"
        app:layout_heightPercent="26.7%"
        app:layout_marginLeftPercent="0.5%"
        app:layout_marginTopPercent="0.5%"
        app:layout_textSizePercent="15%"
        app:layout_widthPercent="33%" />


    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button6"
        android:layout_toEndOf="@+id/button5"
        android:background="@drawable/keyboard_num"
        android:gravity="center"
        android:text="9"
        android:textColor="@color/white"
        app:layout_heightPercent="26.7%"
        app:layout_marginLeftPercent="0.5%"
        app:layout_marginTopPercent="0.5%"
        app:layout_textSizePercent="15%"
        app:layout_widthPercent="33%" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button1"
        android:background="@drawable/keyboard_num"
        android:text="2"
        android:textColor="@color/white"
        app:layout_heightPercent="26.7%"
        app:layout_marginLeftPercent="0.5%"
        app:layout_textSizePercent="15%"
        app:layout_widthPercent="33%" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button2"
        android:background="@drawable/keyboard_num"
        android:text="3"
        android:textColor="@color/white"
        app:layout_heightPercent="26.7%"
        app:layout_marginLeftPercent="0.5%"
        app:layout_textSizePercent="15%"
        app:layout_widthPercent="33%" />


</com.zhy.android.percent.support.PercentRelativeLayout>

