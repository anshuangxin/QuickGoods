<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/alert_bg"
            android:orientation="vertical"
            android:padding="15dp"
            android:stretchColumns="1">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="付款方式"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="付款方式:"
                    android:textSize="@dimen/textsize2" />

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="现金"
                        android:textSize="@dimen/textsize2" />

                    <RadioButton
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="微信/支付宝"
                        android:textSize="@dimen/textsize2" />
                </RadioGroup>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="应        收:"
                    android:textSize="@dimen/textsize2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_receive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="0.01"
                        android:textColor="@color/font2"
                        android:textSize="@dimen/textsize2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="元"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayoutkefu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="客        付:"
                    android:textSize="@dimen/textsize2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ed_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit_bg"
                        android:ems="8"
                        android:gravity="center_vertical"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="number|numberDecimal"
                        android:maxLength="5"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="12sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="元"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayoutzhaoling"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="找        零:"
                    android:textSize="@dimen/textsize2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_zhaoling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/font2"
                        android:textSize="@dimen/textsize2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="元"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayoutshouquanma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="授  权  码:"
                    android:textSize="@dimen/textsize2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ed_shouquanma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="授权码"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="number"
                        android:maxEms="20"
                        android:maxLength="20"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="12sp" />

                    <com.zmsoft.TestTool.views.SquarImageButton
                        android:id="@+id/btn_saoma"
                        android:layout_width="20dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/transpant"
                        android:saveEnabled="false"
                        android:src="@drawable/saoma_selector" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="件        数:"
                    android:textSize="@dimen/textsize2" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:maxEms="5"
                    android:text="1"
                    android:textColor="@color/font2"
                    android:textSize="@dimen/textsize2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="手机号码:"
                    android:textSize="@dimen/textsize2" />

                <EditText
                    android:id="@+id/ed_phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edit_bg"
                    android:digits="0123456789"
                    android:gravity="center_vertical"
                    android:hint="手机号可积分(选填)"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="number"
                    android:maxEms="11"
                    android:maxLength="11"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="12sp" />


            </LinearLayout>


            <Button
                android:id="@+id/btn_sure"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_btn_selector"
                android:text="确认"
                android:textColor="@color/black"
                android:textSize="18dp" />


        </LinearLayout>

        <ImageButton
            android:id="@+id/imb_close"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="right"
            android:background="@drawable/tranpant_bg_selector"
            android:scaleType="fitXY"
            android:src="@drawable/btn_close02" />
    </FrameLayout>

    <com.zmsoft.TestTool.views.PassKeyBoard
        android:id="@+id/passkeyboard"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp" />
</LinearLayout>