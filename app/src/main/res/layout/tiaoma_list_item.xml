<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="250dp"
    android:gravity="center"
    android:background="@color/white"
    android:padding="5dp">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/listitem_selector"
        android:orientation="vertical"
        android:padding="1dp">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ls_img02"
            app:layout_heightPercent="48%h" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_title"
            android:background="@color/tranpant"
            android:text="可口可乐"
            android:minLines="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_marginLeftPercent="4.4%h"
            app:layout_marginTopPercent="6%h"
            app:layout_textSizePercent="6%h" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_name"
            android:background="@color/tranpant"
            android:gravity="center_vertical"
            android:text="商品编号:1321321321"
            android:textColor="@color/font3"
            android:textSize="12sp"
            app:layout_marginLeftPercent="4.4%h"
            app:layout_marginTopPercent="2.4%h"
            app:layout_textSizePercent="4.4%h" />

        <TextView
            android:id="@+id/tv_hava_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_code"
            android:background="@color/tranpant"
            android:gravity="center_vertical"
            android:text="库存数量:21321"
            android:textColor="@color/font3"
            android:textSize="12sp"
            app:layout_marginLeftPercent="4.4%h"
            app:layout_marginTopPercent="4.4%h"
            app:layout_textSizePercent="4.4%h" />


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_hava_count"
            android:background="@color/tranpant"
            android:gravity="center_vertical"
            android:text="0.02"
            android:textColor="@color/font2"
            android:textSize="16sp"
            app:layout_marginLeftPercent="4.4%h"
            app:layout_marginTopPercent="5%h"
            app:layout_textSizePercent="6%h" />

       <!-- <TextView android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_hava_count"
            android:background="@color/tranpant"
            android:gravity="center_vertical"
            android:text="x1"
            android:textColor="@color/font2"
            android:textSize="16sp"
            app:layout_marginRightPercent="4.4%h"
            app:layout_marginTopPercent="5%h"
            app:layout_textSizePercent="6%h" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_price"
            android:layout_toEndOf="@+id/tv_price"
            android:background="@color/tranpant"
            android:gravity="center_vertical"
            android:text="元"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_textSizePercent="4.4%h" />

    </com.zhy.android.percent.support.PercentRelativeLayout>
</LinearLayout>