<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/codebg"
    android:gravity="center"
    android:padding="5dp">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="103dp"
        android:layout_height="130dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ls_img02"
            app:layout_heightPercent="63%h" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_title"
            android:background="@color/tranpant"
            android:gravity="center_vertical"
            android:text="可口可乐"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_marginLeftPercent="4.4%h"
            app:layout_marginTopPercent="7%h"
            app:layout_textSizePercent="8%h" />


        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:background="@color/tranpant"
            android:gravity="center_vertical"
            android:text="x1"
            android:textColor="@color/font2"
            android:textSize="16sp"
            app:layout_marginRightPercent="4.4%h"
            app:layout_marginTopPercent="5%h"
            app:layout_textSizePercent="8%h" />

    </com.zhy.android.percent.support.PercentRelativeLayout>
</LinearLayout>