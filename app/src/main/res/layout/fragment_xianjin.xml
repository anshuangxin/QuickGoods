<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/viewHeight"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/viewHeight"
                android:gravity="right|center_vertical"
                android:text="应收:"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize2"
                app:layout_heightPercent="13.6%h" />

            <EditText
                android:id="@+id/ed_yingshou"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bg"
                android:ems="11"
                android:gravity="center_vertical"
                android:inputType="number|numberDecimal"
                android:paddingLeft="5dp"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/viewHeight"
                android:gravity="right|center_vertical"
                android:text="客付:"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize2" />

            <EditText
                android:id="@+id/ed_kefu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bg"
                android:ems="11"
                android:gravity="center_vertical"
                android:inputType="number|numberDecimal"
                android:paddingLeft="5dp"
                android:textColor="@color/black" />
        </TableRow>


        <TableRow

            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/viewHeight"
                android:ems="5"
                android:gravity="right|center_vertical"
                android:text="手机号:"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize2"
                app:layout_heightPercent="13.6%h" />

            <EditText
                android:id="@+id/ed_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bg"
                android:digits="0123456789"
                android:ems="11"
                android:gravity="center_vertical"
                android:hint="手机号可积分"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow

            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/viewHeight"
                android:gravity="right|center_vertical"
                android:text="找零:"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize2"
                app:layout_heightPercent="13.6%h" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ed_zhaoling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:inputType="number|numberDecimal"
                    android:maxEms="11"
                    android:paddingLeft="5dp"
                    android:text="0"
                    android:textColor="@color/font2"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="元"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>
        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/viewHeight"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize2"
                app:layout_heightPercent="13.6%h" />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_btn_selector"
                android:enabled="false"
                android:gravity="center"
                android:minEms="11"
                android:text="确认" />
        </TableRow>

    </TableLayout>

    <com.bjyzqs.kuaihuo_yunshouyin.views.PassKeyBoard
        android:id="@+id/passkeyboard"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginLeft="@dimen/viewHeight"
        android:layout_weight="1" />


</LinearLayout>