<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/big_bg">


            <FrameLayout
                android:layout_width="400dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_widthPercent="46%w">

                <EditText
                    android:id="@+id/ed_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ-"
                    android:ems="20"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:hint="接入扫码盒后扫码核验"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="number"
                    android:lines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="30dp"
                    android:paddingTop="2dp"
                    android:textSize="@dimen/textsize2" />

                <ImageView
                    android:id="@+id/btn_decode"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/transpant"
                    android:scaleType="centerInside"
                    android:src="@drawable/saoma_selector" />

            </FrameLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <LinearLayout
            android:id="@+id/isshowlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.zmsoft.TestTool.views.DrawableLeftText
                android:id="@+id/tv_pay_man"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@color/tranpant"
                app:myImageHeight="18dp"
                app:myImageScaleType="center"
                app:myImageSrc="@drawable/check_icon01"
                app:myImageWidth="16dp"
                app:myTextAndImgPadding="5dp"
                app:myTextColor="@color/black"
                app:myTextSize="@dimen/textsize2" />

            <com.zmsoft.TestTool.views.DrawableLeftText
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@color/tranpant"
                app:myImageHeight="18dp"
                app:myImageScaleType="center"
                app:myImageSrc="@drawable/check_icon02"
                app:myImageWidth="16dp"
                app:myTextAndImgPadding="5dp"
                app:myTextColor="@color/black"
                app:myTextSize="@dimen/textsize2" />

            <com.zmsoft.TestTool.views.DrawableLeftText
                android:id="@+id/tv_form_code"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                app:myImageHeight="18dp"
                app:myImageScaleType="center"
                app:myImageSrc="@drawable/check_icon03"
                app:myImageWidth="16dp"
                app:myTextAndImgPadding="5dp"
                app:myTextColor="@color/black"
                app:myTextSize="@dimen/textsize2" />

            <com.zmsoft.TestTool.views.DrawableLeftText
                android:id="@+id/tv_take_type"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@color/tranpant"
                app:myImageHeight="18dp"
                app:myImageScaleType="center"
                app:myImageSrc="@drawable/check_icon04"
                app:myImageWidth="16dp"
                app:myTextAndImgPadding="5dp"
                app:myTextColor="@color/black"
                app:myTextSize="@dimen/textsize2" />
        </LinearLayout>


        <View
            android:id="@+id/isshowlayout2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/smallline"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/isshowlayout3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/big_bg"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/tranpant"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/tranpant"
                    android:gravity="center"
                    android:text="数量:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize2" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@color/tranpant"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/font4"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@color/tranpant"
                    android:gravity="center"
                    android:text="金额:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize2" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@color/tranpant"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="@color/font4"
                    android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:horizontalSpacing="5dp"
            android:numColumns="5"
            android:scrollbars="none"
            android:verticalSpacing="5dp" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/frm_ischeck"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/check_shb" />

        <TextView
            android:id="@+id/tv_heyan_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="2017.08.10 12:30"
            android:textColor="#80E50000"
            android:textSize="11dp" />
    </FrameLayout>

</RelativeLayout>